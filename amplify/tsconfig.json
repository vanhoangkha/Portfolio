{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["auth/**/*.ts", "data/**/*.ts", "storage/**/*.ts", "functions/**/resource.ts", "backend.ts"],
  "exclude": ["node_modules", "dist", "functions/**/handler.ts", "functions/**/node_modules", "functions/**/dist"]
}
