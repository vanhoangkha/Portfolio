# Application
VITE_APP_NAME=Portfolio
VITE_APP_VERSION=2.0.0

# API Configuration
VITE_API_URL=https://api.example.com
VITE_API_TIMEOUT=10000

# CMS Configuration (Strapi or Contentful)
VITE_CMS_URL=https://cms.example.com
VITE_CMS_API_KEY=your_cms_api_key_here

# Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_API_SECRET=your_ga_api_secret_here

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here
VITE_JWT_EXPIRES_IN=24h

# Contact Form & Email
VITE_CONTACT_API_URL=https://api.example.com/contact
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here
VITE_CONTACT_EMAIL=your.email@example.com

# reCAPTCHA
VITE_RECAPTCHA_SITE_KEY=6Lc...your_site_key_here
VITE_RECAPTCHA_SECRET_KEY=6Lc...your_secret_key_here

# Newsletter (Mailchimp or SendGrid)
VITE_MAILCHIMP_API_KEY=your_mailchimp_api_key_here
VITE_MAILCHIMP_LIST_ID=your_list_id_here
VITE_MAILCHIMP_SERVER_PREFIX=us1

# Push Notifications (PWA)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Error Tracking (Optional - Sentry)
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# Feature Flags
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_ANALYTICS_DASHBOARD=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
